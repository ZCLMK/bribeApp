

<div class="container">
    
    <% if @creator.avatar? %>
        <h1><%=@creator.username%></h1>
        <p><%=image_tag(@creator.avatar.thumb.url)%></p>
        <% else %>
        <p>Kezako??</p>
    <% end %>

    <% @events.each do |event| %>
      <% @description = event.description.to_s %>
              
      <div class="col-md-6 event">
          <div class="event-details">
                  <a href="/event/<%=event.id%>"><%= event.title %></h2></a>
                    <p> <%= event.date%></p>
               
              <!-- Gestion de la longueur de la description (extrait si > 300 caractÃ¨res) -->            
                    <p><%= @description.truncate(450, separator:' ') %></p>
              <!-- Gestion de la longueur de la descriptions - fin -->
                     </div>
                   
          <div class="event-pic">
                <%= image_tag(event.image_url)%>
          </div>
      </div>
    <% end %>
</div>