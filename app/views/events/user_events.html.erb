

<div class="container">
        <h1><%=@user.username%></h1>
    <% if !@user.avatar.file.nil? %>
    
        <p><%=image_tag(@user.avatar.thumb.url)%></p>
        <% else %>
         <p><%=image_tag("avatar_default.jpeg")%></p>
    <% end %>

    <% @events.each do |event| %>
      <% @description = event.description.to_s %>
              
      <div class="event">
          <div class="event--details">
                  <a href="/events/<%=event.id%>"><%= event.title %></h2></a>
                    <p>Le <%= formatted_date(event.date)%> à  <%= formatted_time(event.time) %>
               
              <!-- Gestion de la longueur de la description (extrait si > 300 caractères) -->            
                    <p><%= @description.truncate(450, separator:' ') %></p>
              <!-- Gestion de la longueur de la descriptions - fin -->
                     </div>
						<div class="event--pic">   
              <% if has_image(event)%>      
                      
									<%= image_tag "#{event.imageurl}"%>
                    <button>S'incrire</button>
                   
							<% elsif has_url(event)%>
									<%= image_tag "#{event.imageurl}" %>
            	
							<% end %>
            </div>
				<!-- modifier l'évenement -->
	
				<% if current_user.id == event.creator_id%>
					<a href="/events/<%= event.id %>/edit">Modifier l'évenement</a>
				<% end %>
	
		</div>
    <% end %>
 </div>
