<%= form_with(model: @event, local: true, html: {class: "event-f"})  do |f| %>
    
    <!-- ERREURS ?-->
    
    <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>Il y a <%= pluralize(@event.errors.count, "erreur") %> dans la création de cet évenement</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <!-- FIN ERREURs -->
    
    <p><%= f.label(:nom)%></p>
    <p><%= f.text_field(:title, size:50, required: true) %></p> 
   
    <p><%= f.label(:date)%></p>
    <p><%= f.date_field(:date,  min: Date.today, required: true) %></p>

    <p><%= f.label(:heure)%></p>
    <p><%=f.text_field(:time, type:"time") %></p>
    
    <p><%= f.label(:adresse)%></p>
    <p><%= f.text_field(:address, size:50, required: true) %> </p>
    
    <p><%= f.label(:description)%></p>
    <p><%= f.text_area(:description, cols:60, rows:8, required: true)%></p>
    
    <p>
    <%= f.select(:category_id, options_for_select(
    [
      ['Concerts', 1],
      ['Expos', 2],
      ['Spectacles', 3],
      ["Sport", 4],
      ["Loisirs", 5],
      ["Nature", 6]
      ], 5)) %>
      </p>

	<p>	<%= f.label :image %>
	<p>	<%= f.file_field :image %><br>
	<p>	<%= f.hidden_field :image_cache %></p>

	<p><%= f.label(:url)%></p>
    <p><%=f.text_field(:imageurl, type:"string") %></p>

	
    
    <p><%= f.submit "Create" %></p>

<% end %>
